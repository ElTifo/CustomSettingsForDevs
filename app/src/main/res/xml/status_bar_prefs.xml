<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="@string/statusbar_icons_title" />
        <!-- Status bar battery Styles -->
        <com.typhus.romcontrol.prefs.MyListPreference
            android:defaultValue="0"
            android:entries="@array/status_bar_battery_style_entries"
            android:entryValues="@array/status_bar_battery_style_values"
            android:key="status_bar_battery_style"
            android:title="@string/status_bar_battery_style_title" />

        <!-- Status bar battery percentage Modes -->
        <com.typhus.romcontrol.prefs.MyListPreference
            android:defaultValue="0"
            android:entries="@array/battery_percent_entries"
            android:entryValues="@array/battery_percent_values"
            android:key="status_bar_show_battery_percent_vm"
            android:title="@string/battery_percent_title" />

        <!-- Charging battery percentage Mode -->
        <SwitchPreference
            android:defaultValue="true"
            android:key="status_bar_battery_text_charging"
            android:summaryOff="@string/status_bar_battery_text_charging_summary"
            android:summaryOn="@string/status_bar_battery_text_charging_summary"
            android:title="@string/status_bar_battery_text_charging_title" />
        <PreferenceScreen
            android:title="@string/status_bar_clock_title">
            <PreferenceCategory android:title="@string/status_bar_clock_title">
                <SwitchPreference
                    android:defaultValue="true"
                    android:key="statusbar_clock"
                    android:title="@string/status_bar_clock_show" />
                <com.typhus.romcontrol.prefs.MyListPreference
                    android:defaultValue="0"
                    android:entries="@array/status_bar_clock_style_entries"
                    android:entryValues="@array/status_bar_clock_style_values"
                    android:key="statusbar_clock_style"
                    android:title="@string/status_bar_clock_style_title"
                    android:dependency="statusbar_clock" />
                <com.typhus.romcontrol.prefs.MyListPreference
                    android:defaultValue="0"
                    android:entries="@array/status_bar_am_pm_entries"
                    android:entryValues="@array/status_bar_am_pm_values"
                    android:key="statusbar_am_pm"
                    android:title="@string/status_bar_am_pm_title"
                    android:dependency="statusbar_clock" />
                <SwitchPreference
                    android:defaultValue="false"
                    android:key="statusbar_clock_seconds"
                    android:title="@string/clock_seconds_display"
                    android:dependency="statusbar_clock" />
            </PreferenceCategory>
            <PreferenceCategory android:title="@string/status_bar_date_title">
                <com.typhus.romcontrol.prefs.MyListPreference
                    android:defaultValue="0"
                    android:entries="@array/clock_date_display_entries"
                    android:entryValues="@array/clock_date_display_values"
                    android:key="clock_date_display"
                    android:title="@string/clock_date_display"
                    android:dependency="statusbar_clock" />
                <com.typhus.romcontrol.prefs.MyListPreference
                    android:defaultValue="0"
                    android:entries="@array/clock_date_style_entries"
                    android:entryValues="@array/clock_date_style_values"
                    android:key="clock_date_style"
                    android:title="@string/clock_date_style"
                    android:dependency="clock_date_display" />
                <com.typhus.romcontrol.prefs.MyListPreference
                    android:defaultValue="0"
                    android:entries="@array/clock_date_format_entries_values"
                    android:entryValues="@array/clock_date_format_entries_values"
                    android:key="statusbar_clock_date_format"
                    android:title="@string/clock_date_format"
                    android:dependency="clock_date_display" />
                <com.typhus.romcontrol.prefs.MyListPreference
                    android:defaultValue="0"
                    android:entries="@array/clock_date_position_entries"
                    android:entryValues="@array/clock_date_position_values"
                    android:key="statusbar_clock_date_position"
                    android:title="@string/clock_date_position"
                    android:dependency="clock_date_display" />
            </PreferenceCategory>
        </PreferenceScreen>
        <PreferenceScreen
        android:title="@string/traffic_category">
        <PreferenceCategory android:title="@string/traffic_category">
            <com.typhus.romcontrol.prefs.MyListPreference
                android:defaultValue="0"
                android:entries="@array/network_traffic_location_entries"
                android:entryValues="@array/network_traffic_location_values"
                android:key="network_traffic_location"
                android:title="@string/network_traffic_state_title" />
            <com.typhus.romcontrol.prefs.MyListPreference
                android:defaultValue="0"
                android:entries="@array/show_network_traffic_type_entries"
                android:entryValues="@array/show_network_traffic_type_values"
                android:key="network_traffic_type"
                android:title="@string/network_traffic_type" />
            <!--
            <com.typhus.romcontrol.prefs.MyListPreference
                android:defaultValue="0"
                android:entries="@array/network_traffic_layout_entries"
                android:entryValues="@array/network_traffic_layout_values"
                android:key="network_traffic_layout"
                android:title="@string/network_traffic_layout" />
            -->
            <com.typhus.romcontrol.prefs.SeekBarPreference
                min="0"
                units="KiB/s"
                android:defaultValue="1"
                android:icon="@null"
                android:key="network_traffic_autohide_threshold"
                android:max="10"
                android:title="@string/network_traffic_autohide_threshold_title"
                />
            <!--
            <com.typhus.romcontrol.prefs.SeekBarPreference
                min="1"
                units="sec"
                android:defaultValue="2"
                android:icon="@null"
                android:key="network_traffic_refresh_interval"
                android:title="@string/network_traffic_refresh_interval_title"
                android:max="10"
                />
            -->
            <SwitchPreference
                android:defaultValue="true"
                android:key="network_traffic_arrow"
                android:summaryOff="@string/network_traffic_hidearrow_summary"
                android:summaryOn="@string/network_traffic_hidearrow_summary"
                android:title="@string/network_traffic_hidearrow" />

            </PreferenceCategory>
        </PreferenceScreen>
        <SwitchPreference
            android:defaultValue="false"
            android:key="more_notif"
            android:summaryOff="@string/lockscreen_charging_animation_off"
            android:summaryOn="@string/switch_bar_on"
            android:title="@string/more_notif_title" />
        <PreferenceCategory android:title="@string/lockscreen_show_status_bar_title">
            <PreferenceScreen
                android:title="@string/sb_battery_bar_title">
                <PreferenceCategory android:title="@string/sb_battery_bar_title">
                    <com.typhus.romcontrol.prefs.MyListPreference
                        android:defaultValue="0"
                        android:entries="@array/battery_bar_no_navbar_entries"
                        android:entryValues="@array/battery_bar_no_navbar_values"
                        android:key="statusbar_battery_bar_no_navbar_list"
                        android:title="@string/battery_bar_no_navbar" />
                    <!--#ffffffff-->
                    <!-- -16711936 -->
                    <com.typhus.romcontrol.prefs.ColorPickerPreference
                        alphaSlider="false"
                        hexValue="true"
                        android:defaultValue="0xffffffff"
                        android:key="statusbar_battery_bar_color"
                        android:title="@string/battery_bar_color" />
                    <!--#ffff6600-->
                    <!-- -39424 -->
                    <com.typhus.romcontrol.prefs.ColorPickerPreference
                        alphaSlider="false"
                        hexValue="true"
                        android:defaultValue="0xffff6600"
                        android:key="statusbar_battery_bar_battery_low_color"
                        android:title="@string/battery_bar_battery_low_color" />
                    <SwitchPreference
                        android:defaultValue="true"
                        android:key="statusbar_battery_bar_enable_charging_color"
                        android:title="@string/battery_bar_use_charging_color" />
                    <!--#ff00ff00-->
                    <!-- -16711936 -->
                    <com.typhus.romcontrol.prefs.ColorPickerPreference
                        alphaSlider="false"
                        hexValue="true"
                        android:defaultValue="0xff00ff00"
                        android:key="statusbar_battery_bar_charging_color"
                        android:title="@string/battery_bar_charging_color"
                        android:dependency="statusbar_battery_bar_enable_charging_color" />
                    <SwitchPreference
                        android:defaultValue="false"
                        android:key="statusbar_battery_bar_blend_color"
                        android:summaryOff="@string/battery_bar_blend_color_summary"
                        android:summaryOn="@string/battery_bar_blend_color_summary"
                        android:title="@string/battery_bar_blend_color_title" />
                    <SwitchPreference
                        android:defaultValue="false"
                        android:key="statusbar_battery_bar_blend_color_reverse"
                        android:summaryOff="@string/battery_bar_blend_color_reverse_summary_off"
                        android:summaryOn="@string/battery_bar_blend_color_reverse_summary_on"
                        android:title="@string/battery_bar_blend_color_reverse_title"
                        android:dependency="statusbar_battery_bar_blend_color" />
                    <com.typhus.romcontrol.prefs.MyListPreference
                        android:defaultValue="0"
                        android:entries="@array/battery_bar_style_entries"
                        android:entryValues="@array/battery_bar_style_values"
                        android:key="statusbar_battery_bar_style"
                        android:title="@string/battery_bar_style_title" />
                    <com.typhus.romcontrol.prefs.SeekBarPreference
                        min="1"
                        units="dp"
                        android:defaultValue="1"
                        android:icon="@null"
                        android:key="statusbar_battery_bar_thickness"
                        android:max="4"
                        android:title="@string/battery_bar_thickness_title" />
                    <SwitchPreference
                        android:defaultValue="false"
                        android:key="statusbar_battery_bar_animate"
                        android:title="@string/battery_bar_animate_title" />
                </PreferenceCategory>
            </PreferenceScreen>
            <com.typhus.romcontrol.prefs.MyListPreference
                android:defaultValue="0"
                android:entries="@array/status_bar_height_entries"
                android:entryValues="@array/status_bar_height_values"
                android:key="status_bar_height"
                android:title="@string/status_bar_height" />
            <SwitchPreference
                android:defaultValue="false"
                android:key="fix_sb_left_paddding"
                android:summaryOff="@string/lockscreen_charging_animation_off"
                android:summaryOn="@string/switch_bar_on"
                android:title="@string/fix_status_bar_padding" />
        </PreferenceCategory>
