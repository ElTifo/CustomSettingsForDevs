<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="@string/fod_icon_picker_category_title">
        <com.typhus.romcontrol.prefs.MyListPreference
            android:defaultValue="0"
            android:entries="@array/fod_icon_picker_entries"
            android:entryValues="@array/fod_icon_picker_values"
            android:key="fod_icon_picker"
            android:title="@string/fod_icon_picker_title"/>
        <com.typhus.romcontrol.prefs.MyListPreference
            android:defaultValue="0"
            android:entries="@array/fod_pressed_state_entries"
            android:entryValues="@array/fod_pressed_state_values"
            android:key="fod_icon_pressed"
            android:title="@string/fod_pressed_state_title"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/fprint_sucess_vib_title">
        <SwitchPreference
            android:defaultValue="true"
            android:key="fod_vibrate"
            android:summaryOff="@string/quick_pulldown_off"
            android:summaryOn="@string/switch_bar_on"
            android:title="@string/fprint_sucess_vib_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/fod_recog_animation">
        <SwitchPreference
            android:defaultValue="true"
            android:key="fod_recognizing_animation"
            android:summaryOff="@string/fod_recog_animation_summary"
            android:summaryOn="@string/fod_recog_animation_summary"
            android:title="@string/fod_recog_animation" />
        <com.typhus.romcontrol.prefs.MyListPreference
            android:defaultValue="0"
            android:entries="@array/fod_recog_animation_entries"
            android:entryValues="@array/fod_recog_animation_values"
            android:key="fod_anim"
            android:title="@string/fod_recog_animation_effect_title"
            android:dependency="fod_recognizing_animation"/>
    </PreferenceCategory>
    <PreferenceScreen
        android:title="@string/more_line_text">
        <PreferenceCategory android:title="@string/lockscreen_clock_title">
            <com.typhus.romcontrol.prefs.MyListPreference
                android:defaultValue="0"
                android:entries="@array/lockscreen_clock_entries"
                android:entryValues="@array/lockscreen_clock_values"
                android:key="lockscreen_clock_style"
                android:title="@string/lockscreen_clock_title" />
            <SwitchPreference
                android:defaultValue="true"
                android:key="clock_show_status_area"
                android:summaryOff="@string/lockscreen_charging_animation_off"
                android:summaryOn="@string/switch_bar_on"
                android:title="@string/lockscreen_clock_show_status_area" />
        </PreferenceCategory>
        <PreferenceCategory android:title="@string/lockscreen_media_category">
            <SwitchPreference
                android:defaultValue="false"
                android:key="lockscreen_media_metadata"
                android:summaryOff="@string/media_art_summary"
                android:summaryOn="@string/media_art_summary"
                android:title="@string/media_art_title" />
            <com.typhus.romcontrol.prefs.MyListPreference
                android:defaultValue="0"
                android:entries="@array/lockscreen_cover_filter_entries"
                android:entryValues="@array/lockscreen_cover_filter_values"
                android:key="lockscreen_albumart_filter"
                android:title="@string/lockscreen_cover_filter_title"
                android:dependency="lockscreen_media_metadata"/>
            <com.typhus.romcontrol.prefs.SeekBarPreference
                min="5"
                units="%"
                android:defaultValue="100"
                android:icon="@null"
                android:key="lockscreen_media_blur"
                android:title="@string/lockscreen_media_blur_title"
                android:max="100"
                android:dependency="lockscreen_media_metadata"
                interval="5"/>
        </PreferenceCategory>
        <PreferenceCategory android:title="@string/lockscreen_visualizer_enable">
            <SwitchPreference
                android:defaultValue="false"
                android:key="lockscreen_visualizer_enabled"
                android:summaryOff="@string/lockscreen_visualizer_enable_summary"
                android:summaryOn="@string/lockscreen_visualizer_enable_summary"
                android:title="@string/lockscreen_visualizer_enable" />
        </PreferenceCategory>
        <!--<PreferenceCategory android:title="@string/lockscreen_battery_info_title">
            <SwitchPreference
                android:defaultValue="true"
                android:key="lockscreen_battery_info"
                android:summaryOff="@string/lockscreen_battery_info_summary"
                android:summaryOn="@string/lockscreen_battery_info_summary"
                android:title="@string/lockscreen_battery_info_title" />
            <com.typhus.romcontrol.prefs.MyListPreference
                android:defaultValue="0"
                android:entries="@array/lockscreen_charging_animation_entries"
                android:entryValues="@array/lockscreen_charging_animation_values"
                android:key="lockscreen_charging_animation_style"
                android:title="@string/lockscreen_charging_animation_title" />
        </PreferenceCategory>-->
    </PreferenceScreen>
