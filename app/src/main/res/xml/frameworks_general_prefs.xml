<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="@string/adaptive_sound_title">
        <SwitchPreference
            android:defaultValue="true"
            android:key="adaptive_sound"
            android:summaryOff="@string/lockscreen_charging_animation_off"
            android:summaryOn="@string/switch_bar_on"
            android:title="@string/adaptive_sound_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="SystemUI Tuner">
        <SwitchPreference
            android:defaultValue="true"
            android:key="sysui_tuner"
            android:summaryOff="@string/lockscreen_charging_animation_off"
            android:summaryOn="@string/switch_bar_on"
            android:title="SystemUI Tuner" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/privacy_indicators_title">
        <SwitchPreference
            android:defaultValue="false"
            android:key="privacy_indicators"
            android:summaryOff="@string/lockscreen_charging_animation_off"
            android:summaryOn="@string/switch_bar_on"
            android:title="@string/privacy_indicators_title" />
    </PreferenceCategory>
</PreferenceScreen>